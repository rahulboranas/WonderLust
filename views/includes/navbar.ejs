  .mobile-padding {
    padding-left: 0;
    padding-right: 0;
  }
}
@media (max-width: 600px) {
  .filter-new {
    display: none !important;
  }
 
}

 

  .searchst {
    border-radius: 1.5rem;
    padding-left: 3rem;
    padding-right: 2rem;
  }

  .center-search {
    flex-grow: 1;
    display: flex;
    justify-content: center;
  }

  #exploreBox {
    display: none !important;
  }

  /* --------------------------------------------- */
  /* LEFT â†’ RIGHT Sliding Mobile Menu */
  /* --------------------------------------------- */

  #navbarNavAltMarkup {
    position: fixed;
    top: 0;
    left: -280px;
    width: 260px;
    height: 20vh;
    background: white;
    padding: 1.5rem;
    box-shadow: 4px 6px 15px rgba(0,0,0,0.5);
    transition: left 0.35s ease-in-out;
    z-index: 9999;
    border-bottom-right-radius: 15px;
  }

  #navbarNavAltMarkup.show {
    left: 0;
  }
  .nav-custom{
    color: #fe424f8a;
    font-weight: bold;
  }
  .nav-custom:hover{
    color: #fe424d !important;
  }

  /* Desktop mode resets */
  @media (min-width: 601px) {
    #navbarNavAltMarkup {
      position: static;
      width: auto;
      height: auto;
      left: 0;
      padding: 0;
      box-shadow: none;
    }
  }

  /* Mobile */
  @media (max-width: 600px) {
    .center-search {
      display: none !important;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass"></i>
    </a>
 <a class="navbar-brand  nav-custom" href="/listings">
     Explore More
    </a>
    <div class="center-search">
      <form class="d-flex" role="search">
